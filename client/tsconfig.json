{
  "compilerOptions": {
      "outDir": "../dist_client/",
      "sourceMap": true,
      "strict": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "ES3",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "rootDirs": ["./src/", "./"]
  },
  "include": [
      "./src/**/*",
      "../games/**/*",
      "../common/**/*"
  ]
}